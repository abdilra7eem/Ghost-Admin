<header class="modal-header" data-test-modal="delete-subscriber">
    <h1>{{t "Are you sure?"}}</h1>
</header>
<a class="close" href="" title="{{t "common.Close"}}" {{action "closeModal"}}>{{svg-jar "close"}}<span class="hidden">{{t "common.Close"}}</span></a>

<div class="modal-body">
    {{{t "<strong>WARNING:</strong> All data for this subscriber will be deleted. There is no way to recover this."}}}
</div>

<div class="modal-footer">

    <button {{action "closeModal"}} class="gh-btn" data-test-button="cancel-delete-subscriber">
        <span>{{t "common.Cancel"}}</span>
    </button>
    {{gh-task-button (t "taskButton.Delete")
        successText=(t "taskButton.Deleted")
        task=deleteSubscriber
        class="gh-btn gh-btn-red gh-btn-icon"
        data-test-button="confirm-delete-subscriber"}}
</div>
