<h3 class="gh-content-entry-title">
    {{#link-to "editor.edit" this.post.displayName this.post.id class="permalink" title=(t (concat post.displayName ".list.edit"))}}
        {{this.post.title}}
    {{/link-to}}
</h3>
<p>{{this.subText}}</p>

<section class="gh-content-entry-meta">
    {{#if this.isPage}}
        <span class="gh-content-status-draft gh-badge gh-badge-black">{{t "postBadge.Page"}}</span>
    {{/if}}

    {{#if this.isScheduled}}
        <span class="gh-content-status-draft gh-badge">{{t "postBadge.Scheduled"}}</span>
    {{/if}}

    {{#if this.isDraft}}
        <span class="gh-content-status-draft gh-badge gh-badge-red">{{t "postBadge.Draft"}}</span>
    {{/if}}

    {{#if this.isFeatured}}
        <span class="gh-content-status-featured gh-badge gh-badge-blue">{{t "postBadge.Featured"}}</span>
    {{/if}}

    {{#if (and this.isPublished (not this.post.page))}}
        <span class="gh-content-status-published">{{t "postStatus.Published"}}</span>
    {{/if}}

    {{{t "by <span class=\"gh-content-entry-author\">{authors}</span>" authors=this.authorNames}}} &mdash;

    {{#if this.isPublished}}
        {{gh-format-post-time this.post.publishedAtUTC published=true}}
    {{else if isScheduled}}
        <span class="green">{{t "Will go live {date}" date=(gh-format-post-time this.post.publishedAtUTC scheduled=true)}}</span>
    {{else}}
        {{t "Last edited {date}" date=(gh-format-post-time this.post.updatedAtUTC draft=true)}}
    {{/if}}
</section>
